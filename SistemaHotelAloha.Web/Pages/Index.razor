
@page "/"
<h1 class="display-5 mb-3">Encontrá tu próxima estadía</h1>

<div class="card bg-secondary-subtle border-0">
    <div class="card-body">
        <div class="row g-2">
            <div class="col-md-6">
                <input class="form-control" placeholder="Destino" />
            </div>
            <div class="col-md-3">
                <input class="form-control" placeholder="Check-in (dd/mm/aaaa)" />
            </div>
            <div class="col-md-3">
                <input class="form-control" placeholder="Check-out (dd/mm/aaaa)" />
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary">Buscar</button>
        </div>
    </div>
</div>

<h4 class="mt-4">Destinos destacados</h4>
<div class="row g-3">
    @foreach (var d in new [] { "Buenos Aires", "Córdoba", "Mendoza", "Bariloche"})
    {
        <div class="col-6 col-md-3">
            <div class="p-4 rounded-3" style="background:linear-gradient(135deg,#cbd5e1,#a78bfa);color:#111">
                @d
            </div>
        </div>
    }
</div>
